body
  margin 0
  padding 0
  background #efeff4
.banner
  height 330px
  width 100%
  background url("../../img/banner_img_1@2x.png") no-repeat center
  background-size 100% 330px
  color #ffffff
  position relative
  .icon-top
    height 65px
    width 100%
    background url("../../img/banner_img_shadow@2x.png") no-repeat center top
    background-size 100% 65px
    .icon-back
      width 20px
      height 20px
      display block
      background url("../../img/nav_back_icon@2x.png") no-repeat center
      background-size 10px 20px
      position absolute
      top 22px
      left 20px
    .icon-share
      width 20px
      height 20px
      display block
      background url("../../img/nav_share_icon@2x.png") no-repeat center
      background-size 20px 20px
      position absolute
      top 22px
      right 14%
    .icon-collect
      width 20px
      height 20px
      display block
      background url("../../img/collect_icon_nor@2x.png") no-repeat center
      background-size 20px 20px
      position absolute
      top 22px
      right 3%
      &.active
        background url("../../img/collect_icon_press@2x.png") no-repeat center
        background-size 20px 20px
  .info
    height 25px
    line-height 25px
    position absolute
    bottom 10px
    left 2%
    right 2%
    font-size 14px
    .num
      position absolute
      top -20px
    .price
      color #ea5404
      font-size 22px
    .index
      float right
      font-size 16px
      .in
        font-size 22px
.infos
  background #ffffff
  padding-top 15px
  .left
    padding-left 3%
    width 70%
    height 76px
    float left
    span
      display block
      font-size 12px
      line-height 24px
      color #979797
      &:nth-child(1)
        font-size 24px
        color #323232
      &:nth-child(2)
        font-size 20px
        color #7f7f7f
  .right
    width 26%
    float right
    height 26px
    padding-top 50px
    background url("../../img/content_icon_map@2x.png") no-repeat center 10px
    background-size 20px 30px
    text-align center
    color #b4b4b4
    border-left 1px solid #e1e1e1
  .area
    display block
    clear both
    width 100%
    margin-top 10px
    border-top 1px solid #e1e1e1
    height 36px
    line-height 36px
    text-indent 1em
    color #979797
article
  background #ffffff
  margin-top 10px
  padding-bottom 20px
  section
    height 52px
    padding 3px 3%
    .icon-back
      width 20%
      height 50px
      display block
      background url("../../img/content_img_home01@2x.png") no-repeat center
      background-size 100% 50px
      float left
    .info
      width 75%
      float right
      .mid
        width 33%
        float left
        span
          display block
          width 100%
          color #707071
          &:nth-child(1)
            font-size 16px
            color #323232
            font-weight 600
      .right
        float left
        width 66%
        font-size 12px
        .price
          width 50%
          text-align center
          line-height 50px
          .num
            color #ea5404
        .rights
          display block
          width 40%
          float right
          text-align center
          line-height 50px
          border-left 1px solid #e1e1e1
  .many
    background: #efeff4
    width 85px
    height 25px
    border-radius 5px
    margin 0 auto
    text-align center
    line-height 25px
    margin-bottom 10px
  .title
    display block
    width 100%
    height 33px
    line-height 33px
    font-size 18px
    text-align center
    position relative
    &:before
      content ""
      width 5px
      height 5px
      background #b4b4b4
      display block
      position absolute
      left 36%
      top 14px
      border-radius 50%
    &:after
      content ""
      width 5px
      height 5px
      background #b4b4b4
      display block
      position absolute
      right 36%
      top 14px
      border-radius 50%


  .mid
    display block
    width 100%
    height 10px
    background #efeff4
  table
    width 100%
    font-size 12px
    tr
      height 25px
      vertical-align bottom
      td:nth-child(1)
        color #7f7f7f
        font-weight 600
        text-align right
      td:nth-child(2)
        color #b4b4b4
        text-indent 1em
        border-bottom 1px solid #d6d7dc
  .last
    padding 3%
    background #ffffff
    .icon-content
      display block
      height 190px
      background url("../../img/content_img_home02@2x.png") no-repeat center
      background-size 100% 190px
      margin-top 10px
    .con
      display block
      text-indent 1em
      margin-top 10px
  .box
    background #efeff4
    padding 0 3% 45px 3%
    .list
      height 5px
      width 100%
      background url("../../img/content_img_home03@2x.png") no-repeat center
      background-size 100% 185px
      padding-top 200px
      span
        line-height 25px
        font-size 12px
      .top
        display block
        width 100%
        font-size 18px
      .num
        font-size 18px
        color #ea5404



