body
  margin 0
  padding 0
  background #efefef
  font-size 14px
ul
  list-style none
  padding 0
  margin 0
header
  height 30px
  padding 8px
  background #ffffff
  ul
    border 1px solid #ea5404
    width 70%
    height 30px
    margin 0 auto
    border-radius 5px
    color #ea5404
    li
      float left
      height 30px
      line-height 30px
      width 33%
      text-align center
      &:nth-child(1)
        border-right 1px solid #ea5404
      &:nth-child(2)
        border-right 1px solid #ea5404
      &:nth-child(3)
        width 33.05%
      &.active
        color #ffffff
        background #ea5404

.info
  padding 3%
  position absolute
  top 46px
  bottom 70px
  overflow auto
  overflow-x hidden
  color #323232
  .list
    height 125px
    padding 10px 0
    background #ffffff
    border-radius 5px
    position relative
    margin-bottom 10px
    span
      display block
      padding 0 20px
      text-indent 2em
      color #646464
    .list-title
      font-size 16px
      font-weight 500
      padding 10px 0
      padding-left 8px
      width 94%
      margin-bottom 10px
      border-bottom 1px solid #d6d7dc
    .date
      font-size 12px
      color #999
      padding 0 20px
      float right
      margin-top 10px
.adv
  padding 3%
  display none
  position absolute
  top 46px
  bottom 70px
  overflow auto
  overflow-x hidden
  .list
    height 125px
    background #ffffff
    border-radius 5px
    position relative
    padding-bottom 10px
    &:nth-child(2)
    	margin-top 11px
    .ls
      display block
      padding 0 20px
      text-indent 2em
      color #646464
    .add
      display block
      padding 10px 20px
      color #646464
    .list-title
      font-size 16px
      font-weight 500
      padding 10px 0
      padding-left 20px
      width 94%
      color #323232

      margin-bottom 10px
      border-bottom 1px solid #d6d7dc
      .date
        font-size 12px
        color #999
        padding 0 20px
        float right
        position absolute
        right 10px
        top 20px
.demand
  padding 3%
  display none
  position absolute
  top 46px
  bottom 70px
  overflow auto
  overflow-x hidden
  color #646464
  .list
    height 115px
    padding 10px
    background #ffffff
    margin-bottom 10px
    border-radius 5px
    .list-title
      font-size 16px
      color #323232
      font-weight 500
      padding 10px 0
      padding-left 20px
      width 94%
      margin-bottom 10px
      background url("../../img/content_list_border.9@2x.png") no-repeat 0 bottom
      .list-right
        float right
        color #ffffff
        background #15b755
        border-radius 5px
        padding 2px 5px
        font-size 12px
    .botton
      text-align center
      padding  10px
      button
        background #efeff4
        color #646464
        padding 5px
        border-radius 5px
        border none
      span
        display block
        float right
    &:nth-child(2)
      .list-right
        background #0193e6
    &:nth-child(3)
      .list-right
        background #97b715
    &:nth-child(4)
      .list-right
        background #ea5404
.footer
	position fixed
	height 50px
	width 100%
	bottom 0
	overflow hidden
	background #fff
	padding 0
	margin 0
	.footer_li
		float left
		list-style none
		width 20%
		height 20px
		text-align center
		padding-top 30px
		font-size 12px
		color #b4b4b4
		&:nth-child(1)
			background url(../../img/bottom_nor_icon04@2x.png) no-repeat center top 7px #fff
			background-size 22px 21px
		&:nth-child(2)
			background url(../../img/bottom_nor_icon03@2x.png) no-repeat center top 7px #fff
			background-size 22px 21px
		&:nth-child(3)
			background url(../../img/bottom_icon05@2x.png) no-repeat center top 7px #fff
			background-size 44px 38px
		&:nth-child(4)
			background url(../../img/bottom_press_icon02@2x.png) no-repeat center top 7px #fff
			background-size 22px 21px
			color #ea5404
		&:nth-child(5)
			background url(../../img/bottom_nor_icon01@2x.png) no-repeat center top 7px #fff
			background-size 22px 21px
.cover
	display none
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	background rgba(0,0,0,0.9)
	z-index 9
	.control
		position absolute
		bottom 107px
		width 67.2%
		margin 0 16.4%
		overflow hidden
		span
			display block
			width 100%
			text-align center
			color #ffffff
			line-height 24px
		.circle_left
			padding-top 94px
			float left
			width 94px
			background url(../../img/publish_btn02@2x.png) no-repeat left 0 top 0
			background-size 94px 94px

		.circle_right
			padding-top 94px
			float right
			width 94px
			background url(../../img/publish_btn01@2x.png) no-repeat left 0 top 0
			background-size 94px 94px
	.close
		position absolute
		bottom 0
		left 0
		right 0
		z-index 2
		height 48px
		background url(../../img/publish_close_icon@2x.png) no-repeat center #242221
		background-size 14px 14px
	&.active
		display block
