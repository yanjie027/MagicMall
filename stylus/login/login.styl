body
	padding 0
	margin 0
	background-color #efefef
	font-family Microsoft YaHei
.header
	height 40px
	background-color #fff
	line-height 40px
	.icon-back
		position absolute
		top 4px
		left 10px
		display inline-block
		width 35px
		height 35px
		background url(../../img/nav_icon_back@2x.png) no-repeat center
		background-size 12px 18px
	.header_title
		display inline-block
		width 100%
		color #ea5404
		text-align center
		border-bottom 1px solid #d6d7dc
.form-list
	height 101px
	margin-top 15px
	background #fff
	padding 0 12px
	border-top 1px solid #d6d7dc
	border-bottom 1px solid #d6d7dc
	.form-cell
		position relative
		height 49px
		line-height 49px
		.form-cell-name
			display inline-block
			width 50px
			padding-left 40px
			background url(../../img/content_ID_icon@2x.png) no-repeat left 6px center
			background-size 25% 50%
		.cell-passwd
			background url(../../img/content_password_icon@2x.png) no-repeat left 8px center
			background-size 16px 50%
		.form-cell-input
			height 49px
			border none
			outline none
		&:after
			content ''
			position absolute
			bottom -1px
			z-index 5
			display block
			height 1px
			width 100%
			background-color #d6d7dc
	.cell-0
		&:after
			content ''
			width 0
.btn_box
	display -webkit-box
	display flex
	height 45px
	margin-top 45px
	padding 0 15px
	.btn_login
		display block
		width 100%
		height 40px
		border none
		border-radius 5px
		background-color #c7c7c7
		line-height 40px
		color #fff
		font-size 1.1rem
		&.active
			background #EA5404
	.btn-reg
		flex 1
		color #ff8a00
		padding-left 10px
		display block
	.btn-passwd
		flex 1
		padding-right 10px
		color #7A7A7C
		text-align right
		display block
