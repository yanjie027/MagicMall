body
  margin 0
  padding 0
  background #121211
  color #ffffff
  .banner
    height 215px
    width 100%
    background url("../../img/banner_img@2x.png") no-repeat center
    background-size 100% 215px
    position relative
    .icon-top
      height 25px
      width 100%
      background url("../../img/banner_img_shadow@2x.png") no-repeat center top
      background-size 100% 25px
      .icon-back
        width 25px
        height 25px
        display block
        background url("../../img/nav_back_icon@2x.png") no-repeat center
        background-size 15px 25px
        position absolute
        top 20px
        left 20px
    .info
      height 25px
      line-height 25px
      position absolute
      bottom 10px
      left 2%
      right 2%
      font-size 14px
      .price
        color #ea5404
        font-size 22px
      .index
        float right
        font-size 16px
        .in
          font-size 22px
.content
  padding 10px
  td
    height 40px
    line-height 25px
    border-top 1px solid #474743
    &:nth-child(1),&:nth-child(3)
      color #707070
      font-size 14px
      width 24%
      padding-left 2%
    &.t1
      font-size 12px
      .num
        color #ea5404
        font-size 18px
    &.infos
      padding-top 15px
.btn
  width 100%
  height 40px
  background #ea5404
  border none
  position absolute
  bottom 0
  color #ffffff



