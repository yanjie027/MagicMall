body
	padding 0
	margin 0
	background #efeff4
.header
	height 40px
	background-color #fff
	line-height 40px
	.icon
		position absolute
		top 4px
		left 10px
		display inline-block
		width 35px
		height 35px
		background url(../../img/nav_icon_back@2x.png) no-repeat center
		background-size 10px 18px
	.header_title
		display inline-block
		width 100%
		text-align center
		border-bottom 1px solid #d6d7dc
.title
	background #ffffff
	margin-top 6px
	overflow hidden
	line-height 40px
	text-align center
	position relative
	border-bottom 1px solid #d6d7dc
	.req
		width 50%
		float left
	.active
		color #ea5404
		border-bottom 2px solid #ea5404
	.source
		width 50%
		float left
	.line
		position absolute
		width 1px
		height 22px
		background #d6d7dc
		left 50%
		top 50%
		margin-top -11px
.demand
	width 94%
	height 131px
	background #ffffff
	margin 10px 3% 0 3%
	border-radius 5px
	.demand_top
		padding 12px 11px
		overflow hidden
		.demand_top_txt
			display block
			float left
			font-size 14px
			color #323232
		.demand_top_tip1
			width 44px
			height 18px
			line-height 18px
			text-align center
			border-radius 3px
			background #15b755
			display block
			float right
			font-size 12px
			color #ffffff
		.demand_top_tip2
			width 44px
			height 18px
			line-height 18px
			text-align center
			border-radius 3px
			background #0193e6
			display block
			float right
			font-size 12px
			color #ffffff
	.demand_mid
		height 4px
		background url(../../img/content_list_border.9@2x.png) repeat-x
		background-size 352px 4px
	.demand_bot
		padding 7px 11px 0px 11px
	.demand_detail
		padding 0 11px
		height 24px
		line-height 24px
		position relative
		overflow hidden
		margin-top 2%
		button
			position absolute
			left 50%
			margin-left -42px
			border 0
			padding 0
			width 84px
			height 24px
			background #efeff4
			border-radius 5px
		span
			display block
			color #646464
			float right
.release_detail
	display none
	padding 0
	margin 0
	li
		width 100%
		background #ffffff
		list-style none
		margin-top 5px
		overflow hidden
		padding 12px 0
		&:nth-child(1)
			margin-top 10px
		.container
			width 94%
			height 91px
			margin 0 3%
			.detail_left
				width 34.2%
				height 90px
				background url(../../img/content_img_list@2x.png) no-repeat center
				background-size 128px 90px
				float left
			.detail_right
				width 57%
				padding-top 7px
				float right
				.txt1
					display block
					color #323232
					overflow hidden
					line-height 100%
					.txt7
						width 14px
						height 13px
						background url(../../img/collect_icon_press@2x.png) no-repeat
						background-size 14px 13px
						float right
				.txt2
					display block
					font-size 12px
					color #646464
					margin-top 5px
				.txt3
					border 1px solid #ea5404
					border-radius 3px
					background #ffffff
					color #ea5404
					margin-top 5px
				.right_bot
					overflow hidden
					margin-top 5px
					.txt4
						float left
						color #727272
						font-size 12px
					.txt5
						float right
						color #727272
						font-size 12px
					.txt6
						float left
						font-size 14px
						color #ea5404
