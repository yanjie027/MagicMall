body
	padding 0
	margin 0
	background-color #efefef
	font-family Microsoft YaHei
.header
	height 40px
	background-color #fff
	line-height 40px
	.icon-back
		position absolute
		top 4px
		left 10px
		display inline-block
		width 35px
		height 35px
		background url(../../img/nav_icon_back@2x.png) no-repeat center
		background-size 12px 18px
	.header_title
		display inline-block
		width 100%
		color #323232
		text-align center
		border-bottom 1px solid #d6d7dc
ul
	padding 0
	margin 0
	li
		list-style none
		width 94%
		margin 10px 3%
		height 40px
		input
			width 100%
			height 100%
			border 1px solid #d6d7dc
			border-radius 5px
			padding-left 13px
			box-sizing border-box
		button
			width 100%
			height 100%
			border 1px solid #d6d7dc
			border-radius 5px
			background #fff
			color #eb642b
		&:nth-child(3)
			margin-top 22px
