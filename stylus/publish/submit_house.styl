body
	padding 0
	margin 0
	background-color #efefef
	font-family Microsoft YaHei
.header
	height 40px
	background-color #fff
	line-height 40px
	border-bottom 1px solid #d6d7dc
	.padd
		padding 0 12px
		.header_title
			position relative
			display inline-block
			width 100%
			color #323232
			text-align center
		.header_cancel
			z-index 2
			position absolute
			font-size 12px
.search
	padding 12px
	height 33px
	.search_detail
		input
			border 1px solid #d6d7dc
			width 70%
			height 33px
			border-radius 3px
			background url(../../img/content_search_icon@2x.png) no-repeat left 11px top 10px #fff
			background-size 13px 13px
			text-indent 2em
		span
			height 12px
			background url(../../img/content_plus_icon@2x.png) no-repeat
			background-size 12px 12px
			display inline-block
			padding-left 19px
			font-size 12px
			color #323232
			line-height 12px
			margin-left 4%
.detail_info
	color #727272
	padding 12px
	background #fff
	border-bottom 1px solid #d6d7dc
	span
		display block
		position relative
		padding-left 12px
		&:before
			content ''
			width 5px
			height 5px
			background #bee949
			border-radius 50%
			position absolute
			left 0
			top 50%
			margin-top -2.5px
	table
		font-size 12px
		width 94%
		margin 0 3%
		tr
			height 24px
			vertical-align bottom
			td
				&:nth-child(1)
					text-align right
				&:nth-child(2)
					border-bottom 1px solid #d6d7dc
					text-indent 1em
					color #bababa
.source_info
	margin-top 11px
	color #727272
	padding 12px
	padding-right 0
	background #fff
	border-bottom 1px solid #d6d7dc
	span
		display block
		position relative
		padding-left 12px
		&:before
			content ''
			width 5px
			height 5px
			background #49cde9
			border-radius 50%
			position absolute
			left 0
			top 50%
			margin-top -2.5px
	.source_select
		margin-top 9px
		font-size 12px
		padding-left 34px
	ul
		margin-top 9px
		overflow hidden
		font-size 12px
		padding-left 58px
		padding-bottom 9px
		border-bottom 1px solid #e1e1e1
		li
			list-style none
			float left
			margin-right 20px
			position relative
			padding-left 15px
			.point
				display inline-block
				margin-right 6px
				width 6px
				height 6px
				background url(../../img/content_nor_icon@2x.png) no-repeat
				background-size 6px 6px
				position absolute
				left 0
				top 50%
				margin-top -3px
			.active
				display inline-block
				margin-right 6px
				width 6px
				height 6px
				background url(../../img/content_nor_icon@2x.png) no-repeat
				background-size 6px 6px
				position absolute
				left 0
				top 50%
				margin-top -3px
				&:after
					content ''
					position absolute
					width 2px
					height 2px
					background url(../../img/content_press_icon@2x.png) no-repeat
					background-size 2px 2px
					left 2px
					top 2px
	.source_detail_info
		font-size 12px
		color #bfbfbf
		table
			width 94%
			tr
				td
					&:nth-child(1)
						width 18%
					&:nth-child(2)
						color #323232
						width 41%
						.text_info
							display inline-block
							margin-left 11px
						input
							text-indent 1em
							width 92.8%
							border 1px solid #e1e1e1
							border-radius 3px
							height 30px
							background #efeff4
							margin-bottom 5px
							&#years
								width 100%
							&#no
								width 100%
						select
							text-indent 1em
							border 1px solid #e1e1e1
							height 30px
							background #efeff4
							border-radius 3px
							width 100%
							color #bfbfbf
							margin-bottom 5px
						textarea
							text-indent 1em
							border 1px solid #e1e1e1
							background #efeff4
							border-radius 3px
							width 100%
							color #bfbfbf
					&:nth-child(3)
						color #323232
						width 41%
						input
							margin-left 7.2%
							text-indent 1em
							width 92.8%
							border 1px solid #e1e1e1
							border-radius 3px
							height 30px
							background #efeff4
							margin-bottom 5px
						div
							color #646464
							//padding-left 12px
							position relative
							padding-left 12px
							.point
								position absolute
								display block
								width 6px
								height 6px
								background url(../../img/content_nor_icon@2x.png) no-repeat center
								background-size 6px 6px
								left 0
								top 50%
								margin-top -3px
							.active
								position absolute
								display block
								width 6px
								height 6px
								background url(../../img/content_nor_icon@2x.png) no-repeat center
								background-size 6px 6px
								left 0
								top 50%
								margin-top -3px
								&:after
									content ''
									position absolute
									width 2px
									height 2px
									background url(../../img/content_press_icon@2x.png) no-repeat
									background-size 2px 2px
									left 2px
									top 2px
	.file_pic
		margin-left 22px
		margin-top 22px
		margin-bottom 10px
		width 74px
		height 44px
		background url(../../img/content_plus_icon@2x.png) no-repeat left 26px top 19px #d4d4d9
		color #727272
		font-size 12px
		padding-bottom 30px
		text-align center
		input
			width 100%
			height 100%
			opacity 0
.button
	margin-top 11px
	background #fff
	button
		width 94%
		height 40px
		color #fff
		background #ea5404
		border 0
		border-radius 5px
		margin 10px 3%
.cover
	display none
	position fixed
	left 0
	top 0
	bottom 0
	right 0
	background rgba(167,167,171,0.5)
	.box_confirm
		height 108px
		width 73%
		background #fff
		border-radius 10px
		margin 278px 13.5% 0 13.5%
		.box_top
			height 63px
			width 100%
			border-bottom 1px solid #d6d7dc
			text-align center
			line-height 63px
			color #323232
			font-size 12px
		.box_bottom
			width 100%
			line-height 44px
			text-align center
			font-size 14px
			color #ea5404
			overflow hidden
			.box_bottom_left
				float left
				width 49.8%
				text-align center
				color #646464
				border-right 1px solid #d6d7dc
			.box_bottom_right
				float left
				width 49.8%
				text-align center
				color #ea5404
